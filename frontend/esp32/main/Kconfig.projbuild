menu "TFT Configuration"

	choice DRIVER
		prompt "Display Driver"
		default ILI9341
		help
			Select Display Driver.
		config ILI9225
			bool "ILI9225"
			help
				Display Driver is ILI9225.
		config ILI9226
			bool "ILI9226"
			help
				Display Driver is ILI9226.
				Same as ILI9225.
		config ILI9320
			bool "ILI9320"
			help
				Display Driver is ILI9320.
		config ILI9325
			bool "ILI9325"
			help
				Display Driver is ILI9325.
		config ILI9327
			bool "ILI9327"
			help
				Display Driver is ILI9327.
		config ILI9340
			bool "ILI9340"
			help
				Display Driver is ILI9340.
				Same as ILI9340.
		config ILI9341
			bool "ILI9341"
			help
				Display Driver is ILI9341.
		config ILI9342
			bool "ILI9342"
			help
				Display Driver is ILI9342.
